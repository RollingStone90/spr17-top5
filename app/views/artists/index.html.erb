<h1>My Artists</h1>
<p><%= link_to new_artist_path do %>
  <span class="glyphicon glyphicon-plus"></span> Add
  <% end %>
</p>

<div class="row">
    <% @artists.each do |artist| %>
      <div class="col-md-6">
        <div class="well">
          <p><%= image_tag artist.avatar.thumb %></p>
          <h2><%= link_to artist.name, artist %></h2>
          <h4><p>
            <% artist.rating.to_i.times do %>
             <span class="glyphicon glyphicon-star"></span>
            <% end %>
          </p></h4>
          
          <h4><%= link_to edit_artist_path(artist) do %>
            <span class="glyphicon glyphicon-pencil">Edit</span>
          <% end %> |  
          <%= link_to artist, method: :delete, data: { confirm: 'Are you sure?' } do %>
             <span class="glyphicon glyphicon-trash">Delete</span>
          <% end %>
          </h4>   
        </div>
      </div>
    <% end %>
  </div>

